# BOM: {"apk:acl-libs":"2.3.2-r1","apk:busybox":"1.37.0-r30","apk:ca-certificates-bundle":"20251003-r0","apk:libxxhash":"0.8.3-r0","apk:lz4-libs":"1.10.0-r0","apk:musl":"1.2.5-r21","apk:popt":"1.19-r4","apk:rsync":"3.4.1-r1","apk:tzdata":"2025c-r0","apk:zlib":"1.3.1-r2","apk:zstd-libs":"1.5.7-r2","image:alpine":"94817fe036e2a98186058c6382acc6bfbe05dbfed4fbecfb617ef0a3691d9cee"}

FROM reg.g5d.dev/alpine@sha256:94817fe036e2a98186058c6382acc6bfbe05dbfed4fbecfb617ef0a3691d9cee AS build

# Install packages
RUN set -eux; \
    apk add --no-cache \
        acl-libs=2.3.2-r1 \
        libxxhash=0.8.3-r0 \
        lz4-libs=1.10.0-r0 \
        musl=1.2.5-r21 \
        popt=1.19-r4 \
        rsync=3.4.1-r1 \
        zlib=1.3.1-r2 \
        zstd-libs=1.5.7-r2 \
    ;

# Install packages into rootfs
RUN \
    apk add --no-cache ca-certificates-bundle=20251003-r0; \
    apk info -qL ca-certificates-bundle | rsync -aq --files-from=- / /rootfs/; \
    apk add --no-cache musl=1.2.5-r21; \
    apk info -qL musl | rsync -aq --files-from=- / /rootfs/; \
    apk add --no-cache tzdata=2025c-r0; \
    apk info -qL tzdata | rsync -aq --files-from=- / /rootfs/;

# Create mount points and directories
RUN apk add --no-cache --virtual .create-directories-deps \
    busybox=1.37.0-r30 \
    musl=1.2.5-r21 \
    ;

# Create directories
RUN mkdir -p /rootfs/tmp /rootfs/proc /rootfs/dev /rootfs/sys /rootfs/etc; \
    chmod 01777 /rootfs/tmp
RUN apk del --no-network .create-directories-deps

# Set up user accounts
RUN apk add --no-cache --virtual .setup-users-groups-deps \
    busybox=1.37.0-r30 \
    musl=1.2.5-r21 \
    ;

# Set up users and groups
RUN mkdir -p /rootfs/etc; \
    echo "root:x:0:" >> /rootfs/etc/group; \
    echo "nobody:x:65534:" >> /rootfs/etc/group; \
    echo "nonroot:x:65532:" >> /rootfs/etc/group; \
    echo "root:x:0:0:root:/root:/sbin/nologin" >> /rootfs/etc/passwd; \
    mkdir -p /rootfs/root; \
    chown 0:0 /rootfs/root; \
    echo "nobody:x:65534:65534:nobody:/nonexistent:/sbin/nologin" >> /rootfs/etc/passwd; \
    echo "nonroot:x:65532:65532:nonroot:/home/nonroot:/sbin/nologin" >> /rootfs/etc/passwd; \
    mkdir -p /rootfs/home/nonroot; \
    chown 65532:65532 /rootfs/home/nonroot
RUN apk del --no-network .setup-users-groups-deps

# Add git config
# Copy gitconfig to /rootfs/etc/gitconfig
COPY gitconfig /rootfs/etc/gitconfig


FROM scratch

ENV SSL_CERT_FILE="/etc/ssl/certs/ca-certificates.crt"

# Copy rootfs
COPY --from=build /rootfs/ /


