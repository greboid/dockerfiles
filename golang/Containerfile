FROM reg.g5d.dev/alpine@sha256:585cb774d46a707564168a0c718d1617c3aa868f77b44fabb383981b27623ef5 AS build

ENV GOPATH="/go"
ENV PATH="$GOPATH/bin:/usr/local/go/bin:$PATH"

# Download and verify Go
RUN apk add --no-cache --virtual .download-verify-extract-deps \
    brotli-libs=1.2.0-r0 \
    busybox=1.37.0-r30 \
    c-ares=1.34.6-r0 \
    ca-certificates-bundle=20251003-r0 \
    curl=8.17.0-r1 \
    libcrypto3=3.5.4-r0 \
    libcurl=8.17.0-r1 \
    libidn2=2.3.8-r0 \
    libpsl=0.21.5-r3 \
    libssl3=3.5.4-r0 \
    libunistring=1.4.1-r0 \
    musl=1.2.5-r21 \
    nghttp2-libs=1.68.0-r0 \
    nghttp3=1.13.1-r0 \
    zlib=1.3.1-r2 \
    zstd-libs=1.5.7-r2 \
    ;

# Download, verify and extract
RUN curl -fsSL -o go.tar.gz "https://golang.org/dl/go1.25.5.src.tar.gz" && \
    echo "22a5fd0a91efcd28a1b0537106b9959b2804b61f59c3758b51e8e5429c1a954f  go.tar.gz" | sha256sum -c && \
    mkdir -p "/usr/local" && tar -xf "go.tar.gz" -C "/usr/local" --strip-components=0
RUN apk del --no-network .download-verify-extract-deps

# Bootstrap and install Go
RUN apk add --no-cache --virtual .build-deps \
  bash=5.3.3-r1 \
  binutils=2.45.1-r0 \
  brotli-libs=1.2.0-r0 \
  busybox=1.37.0-r30 \
  busybox-binsh=1.37.0-r30 \
  c-ares=1.34.6-r0 \
  ca-certificates-bundle=20251003-r0 \
  gcc=15.2.0-r2 \
  git=2.52.0-r0 \
  gmp=6.3.0-r4 \
  go=1.25.5-r0 \
  isl25=0.25-r2 \
  jansson=2.14.1-r0 \
  libatomic=15.2.0-r2 \
  libcrypto3=3.5.4-r0 \
  libcurl=8.17.0-r1 \
  libexpat=2.7.3-r0 \
  libgcc=15.2.0-r2 \
  libgomp=15.2.0-r2 \
  libidn2=2.3.8-r0 \
  libncursesw=6.5_p20251123-r0 \
  libpsl=0.21.5-r3 \
  libssl3=3.5.4-r0 \
  libstdc++=15.2.0-r2 \
  libunistring=1.4.1-r0 \
  mpc1=1.3.1-r1 \
  mpfr4=4.2.2-r0 \
  musl=1.2.5-r21 \
  musl-dev=1.2.5-r21 \
  ncurses-terminfo-base=6.5_p20251123-r0 \
  nghttp2-libs=1.68.0-r0 \
  nghttp3=1.13.1-r0 \
  pcre2=10.47-r0 \
  readline=8.3.1-r0 \
  zlib=1.3.1-r2 \
  zstd-libs=1.5.7-r2 \
  ; \
  set -eux; \
  cd /usr/local/go/src; \
  GOROOT_BOOTSTRAP="$(go env GOROOT)" GOHOSTOS="linux" GOHOSTARCH="amd64" ./make.bash; \
  go install std; \
  rm -rf \
  /go.tar.gz \
  /root/.cache \
  /usr/local/go/pkg/*/cmd \
  /usr/local/go/pkg/bootstrap \
  /usr/local/go/pkg/obj \
  /usr/local/go/pkg/tool/*/api \
  /usr/local/go/pkg/tool/*/go_bootstrap \
  /usr/local/go/src/cmd/dist/dist; \
  go install github.com/google/go-licenses@v1.6.0; \
  apk del --no-network .build-deps

# Create GOPATH directories
RUN apk add --no-cache --virtual .create-directories-deps \
    busybox=1.37.0-r30 \
    musl=1.2.5-r21 \
    ;

# Create directories
RUN mkdir -p $GOPATH/src $GOPATH/bin; \
    chmod 777 $GOPATH/src; \
    chmod 777 $GOPATH/bin
RUN apk del --no-network .create-directories-deps


FROM reg.g5d.dev/alpine@sha256:585cb774d46a707564168a0c718d1617c3aa868f77b44fabb383981b27623ef5 AS rootfs

# Copy Go to rootfs
COPY --from=build /usr/local/go /rootfs/usr/local/go

# Copy GOPATH to rootfs
COPY --from=build /go /rootfs/go


