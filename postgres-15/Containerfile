# Clone repository
RUN git clone --depth=1 --branch REL_15_15 "https://github.com/postgres/postgres" /src/postgres
# Configure
WORKDIR /src/postgres
RUN ./configure --with-system-tzdata=/usr/share/zoneinfo --with-includes=/usr/local/include --with-libraries=/usr/local/lib --with-ssl=openssl
# Build with make
RUN make -j$(nproc) world; \
    make -j$(nproc) install; \
    make -j$(nproc) -C contrib install
# Strip binaries
RUN find /src/postgres -type f -executable -exec strip {} + 2>/dev/null || true
RUN apk del --no-network .clone-and-build-autoconf-deps

# Prepare rootfs dependencies
RUN set -eux; \
    DEPS=$(scanelf --needed --nobanner --format '%n#p' --recursive -l /usr/local /usr/local/pgsql/bin /usr/bin/locale \
    | tr ',' '\n' \
    | sort -u \
    | awk 'system("[ -e /usr/local/lib/" $1 " ]") == 0 { next } { print "so:" $1 }'); \
    mkdir /rootfs; \
    for DEP in $DEPS; do \
    apk add "${DEP}"; \
    apk info -qL "${DEP}" | rsync -aq '--files-from=-' / /rootfs/; \
    done

# Create essential directories
RUN apk add --no-cache --virtual .create-directories-deps \
    busybox=1.37.0-r30 \
    musl=1.2.5-r21 \
    ;

# Create directories
RUN mkdir -p /rootfs/usr/bin /rootfs/bin /rootfs/usr/local/bin /rootfs/var/lib/postgresql/data
RUN apk del --no-network .create-directories-deps

# Copy essential binaries
RUN set -eux; \
    cp /usr/bin/env /rootfs/usr/bin/env; \
    cp /bin/sh /rootfs/bin/sh; \
    cp /bin/ls /rootfs/bin/ls; \
    cp /bin/cat /rootfs/bin/cat; \
    cp /bin/bash /rootfs/bin/bash; \
    cp /usr/bin/find /rootfs/usr/bin/find; \
    cp /usr/bin/locale /rootfs/usr/bin/locale; \
    cp /usr/bin/id /rootfs/usr/bin/id; \
    cp /bin/mkdir /rootfs/bin/mkdir; \
    cp /bin/chmod /rootfs/bin/chmod

# Set up entrypoint script
RUN set -eux; \
    cp /src/docker-postgres/15/alpine/docker-entrypoint.sh /rootfs/usr/local/bin/entry.sh; \
    chmod 777 /rootfs/usr/local/bin/entry.sh; \
    chown 65532:65532 /rootfs/usr/local/bin/entry.sh

# Copy PostgreSQL installation
RUN set -eux; \
    rsync -ap /usr/local/pgsql/ /rootfs/usr/local/pgsql/

# Create volumes
RUN apk add --no-cache --virtual .create-directories-deps \
    busybox=1.37.0-r30 \
    musl=1.2.5-r21 \
    ;

# Create directories
RUN mkdir -p /rootfs/var/lib/postgresql /rootfs/var/lib/postgresql/data /rootfs/var/run /rootfs/tmp /rootfs/docker-entrypoint-initdb.d; \
    chmod 777 /rootfs/var/lib/postgresql; \
    chown 65532:65532 /rootfs/var/lib/postgresql; \
    chmod 777 /rootfs/var/lib/postgresql/data; \
    chown 65532:65532 /rootfs/var/lib/postgresql/data; \
    chmod 777 /rootfs/var/run; \
    chown 65532:65532 /rootfs/var/run; \
    chmod 777 /rootfs/tmp; \
    chown 65532:65532 /rootfs/tmp; \
    chmod 644 /rootfs/docker-entrypoint-initdb.d; \
    chown 65532:65532 /rootfs/docker-entrypoint-initdb.d
RUN apk del --no-network .create-directories-deps


FROM reg.g5d.dev/base@sha256:d1f6a9f3beede32e9679b62dd4a9b8cdc3fbadbd24e2da0807af6a0c23aeddaf

ENV LANG="en_US.utf8"
ENV PATH="/usr/local/pgsql/bin:$PATH"
ENV PGDATA="/var/lib/postgresql/data"
ENV PGHOST="127.0.0.1"
ENV PGUSER="postgres"

# Copy rootfs
COPY --from=build /rootfs/ /

EXPOSE 5432

STOPSIGNAL SIGINT

ENTRYPOINT ["/usr/local/bin/entry.sh"]

CMD ["postgres", "-c", "listen_addresses=*"]


