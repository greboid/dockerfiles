# Clone repository
RUN git clone "https://github.com/docker-library/postgres" /src/docker-postgres && \
    cd /src/docker-postgres && \
    git checkout 39c3dc7046f5f7909179a51e25f2a61158781d57
RUN apk del --no-network .clone-deps

# Build PostgreSQL
RUN apk add --no-cache --virtual .clone-and-build-autoconf-deps \
    autoconf=2.72-r1 \
    automake=1.18.1-r0 \
    binutils=2.45.1-r0 \
