FROM reg.g5d.dev/golang@sha256:3488e9a7e746fe9c38650efe4c12c19834f8ecaecb9c71fafd4e92bd24b1e45e AS build

RUN apk add --no-cache --virtual .clone-deps \
    brotli-libs=1.2.0-r0 \
    c-ares=1.34.6-r0 \
    ca-certificates-bundle=20251003-r0 \
    git=2.52.0-r0 \
    libcrypto3=3.5.4-r0 \
    libcurl=8.17.0-r1 \
    libexpat=2.7.3-r0 \
    libidn2=2.3.8-r0 \
    libpsl=0.21.5-r3 \
    libssl3=3.5.4-r0 \
    libunistring=1.4.1-r0 \
    musl=1.2.5-r21 \
    nghttp2-libs=1.68.0-r0 \
    nghttp3=1.13.1-r0 \
    pcre2=10.47-r0 \
    zlib=1.3.1-r2 \
    zstd-libs=1.5.7-r2 \
    ;

# Clone repository
RUN git clone --depth=1 --branch v0.10.1 "https://github.com/emersion/soju" /src/emersion/soju
RUN apk del --no-network .clone-deps

RUN apk add --no-cache --virtual .build-go-only-deps \
    binutils=2.45.1-r0 \
    gcc=15.2.0-r2 \
    gmp=6.3.0-r4 \
    go=1.25.5-r0 \
    isl25=0.25-r2 \
    jansson=2.14.1-r0 \
    libatomic=15.2.0-r2 \
    libgcc=15.2.0-r2 \
    libgomp=15.2.0-r2 \
    libstdc++=15.2.0-r2 \
    mpc1=1.3.1-r1 \
    mpfr4=4.2.2-r0 \
    musl=1.2.5-r21 \
    musl-dev=1.2.5-r21 \
    zlib=1.3.1-r2 \
    zstd-libs=1.5.7-r2 \
    ;

# Download dependencies
WORKDIR /src/emersion/soju
RUN go mod download
# Build binary
RUN CGO_ENABLED=0 go build -trimpath -tags 'netgo,osusergo,moderncsqlite' -ldflags='-s -w -extldflags "-static"' -o /soju ./cmd/soju
# Generate license notices
RUN go run github.com/google/go-licenses@latest save ./cmd/soju --save_path=/notices/soju --ignore codeberg.org/emersion/soju
RUN apk del --no-network .build-go-only-deps

RUN apk add --no-cache --virtual .build-go-only-deps \
    binutils=2.45.1-r0 \
    gcc=15.2.0-r2 \
    gmp=6.3.0-r4 \
