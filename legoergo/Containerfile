FROM reg.g5d.dev/golang@sha256:b16f36ea9c5553e00f523b9ac6bede48807f6201171a2de39b752fd3c11ac214 AS build

RUN apk add --no-cache --virtual .clone-deps \
    brotli-libs=1.2.0-r0 \
    c-ares=1.34.6-r0 \
    ca-certificates-bundle=20251003-r0 \
