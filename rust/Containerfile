# BOM: {"apk:brotli-libs":"1.2.0-r0","apk:busybox":"1.37.0-r30","apk:c-ares":"1.34.6-r0","apk:ca-certificates-bundle":"20251003-r0","apk:curl":"8.17.0-r1","apk:libcrypto3":"3.5.4-r0","apk:libcurl":"8.17.0-r1","apk:libidn2":"2.3.8-r0","apk:libpsl":"0.21.5-r3","apk:libssl3":"3.5.4-r0","apk:libunistring":"1.4.1-r0","apk:musl":"1.2.5-r21","apk:nghttp2-libs":"1.68.0-r0","apk:nghttp3":"1.13.1-r0","apk:zlib":"1.3.1-r2","apk:zstd-libs":"1.5.7-r2","https://github.com/rust-lang/rust":"1.92.0","https://github.com/rust-lang/rustup":"1.28.2","image:alpine":"cedd1fa545cd1787482aeefa1286d8d0581b7df82e739080889ee088b16bee63"}

FROM reg.g5d.dev/alpine@sha256:cedd1fa545cd1787482aeefa1286d8d0581b7df82e739080889ee088b16bee63 AS build

ENV CARGO_HOME="/usr/local/cargo"
ENV PATH="/usr/local/cargo/bin:$PATH"
ENV RUSTUP_HOME="/usr/local/rustup"
ENV RUST_VERSION="${RUSTTAG}"

# Download and verify rustup
RUN apk add --no-cache --virtual .download-verify-extract-deps \
    brotli-libs=1.2.0-r0 \
    busybox=1.37.0-r30 \
    c-ares=1.34.6-r0 \
    ca-certificates-bundle=20251003-r0 \
    curl=8.17.0-r1 \
    libcrypto3=3.5.4-r0 \
    libcurl=8.17.0-r1 \
    libidn2=2.3.8-r0 \
    libpsl=0.21.5-r3 \
    libssl3=3.5.4-r0 \
    libunistring=1.4.1-r0 \
    musl=1.2.5-r21 \
    nghttp2-libs=1.68.0-r0 \
    nghttp3=1.13.1-r0 \
    zlib=1.3.1-r2 \
    zstd-libs=1.5.7-r2 \
    ;

# Download, verify and extract
RUN curl -fsSL -o rustup-init.checksum "https://static.rust-lang.org/rustup/archive/1.28.2/x86_64-unknown-linux-musl/rustup-init.sha256" && \
    curl -fsSL -o rustup-init "https://static.rust-lang.org/rustup/archive/1.28.2/x86_64-unknown-linux-musl/rustup-init" && \
    echo "$(cat rustup-init.checksum | awk '{print $1}') *rustup-init" | sha256sum -wc -
RUN apk del --no-network .download-verify-extract-deps

# Install Rust
RUN apk add --no-cache --virtual .build-deps \
  busybox=1.37.0-r30 \
  musl=1.2.5-r21 \
  ; \
  set -eux; \
  chmod +x rustup-init; \
  ./rustup-init -y --no-modify-path --profile minimal --default-toolchain 1.92.0 --default-host x86_64-unknown-linux-musl; \
  rm rustup-init*; \
  chmod -R a+w $RUSTUP_HOME $CARGO_HOME; \
  ln -s $CARGO_HOME/bin/cargo /usr/local/bin/cargo; \
  apk del --no-network .build-deps


FROM reg.g5d.dev/alpine@sha256:cedd1fa545cd1787482aeefa1286d8d0581b7df82e739080889ee088b16bee63 AS rootfs

# Copy Rust to rootfs
COPY --from=build /usr/local/rustup /rootfs/usr/local/rustup

# Copy Cargo to rootfs
COPY --from=build /usr/local/cargo /rootfs/usr/local/cargo

# Copy cargo symlink to rootfs
COPY --from=build /usr/local/bin/cargo /rootfs/usr/local/bin/cargo


FROM reg.g5d.dev/alpine@sha256:cedd1fa545cd1787482aeefa1286d8d0581b7df82e739080889ee088b16bee63

ENV CARGO_HOME="/usr/local/cargo"
ENV PATH="/usr/local/cargo/bin:$PATH"
ENV RUSTUP_HOME="/usr/local/rustup"

# Copy rootfs to root
COPY --from=rootfs /rootfs/ /


