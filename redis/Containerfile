# Copy redis config
COPY redis.conf /redis.conf

# Build Redis
RUN apk add --no-cache --virtual .clone-and-build-make-deps \
    binutils=2.45.1-r0 \
    brotli-libs=1.2.0-r0 \
    busybox=1.37.0-r30 \
    c-ares=1.34.6-r0 \
    ca-certificates-bundle=20251003-r0 \
    git=2.52.0-r0 \
    jansson=2.14.1-r0 \
    libcrypto3=3.5.4-r0 \
    libcurl=8.17.0-r1 \
    libexpat=2.7.3-r0 \
    libgcc=15.2.0-r2 \
    libidn2=2.3.8-r0 \
    libpsl=0.21.5-r3 \
    libssl3=3.5.4-r0 \
    libstdc++=15.2.0-r2 \
    libunistring=1.4.1-r0 \
    make=4.4.1-r3 \
    musl=1.2.5-r21 \
    nghttp2-libs=1.68.0-r0 \
    nghttp3=1.13.1-r0 \
    pcre2=10.47-r0 \
    zlib=1.3.1-r2 \
    zstd-libs=1.5.7-r2 \
    ;

# Clone repository
RUN git clone --depth=1 --branch 8.4.0 "https://github.com/redis/redis" /src/redis
# Build with make
WORKDIR /src/redis
RUN make distclean; \
    make MALLOC=libc redis-server redis-cli
# Strip binaries
RUN find /src/redis -type f -executable -exec strip {} + 2>/dev/null || true
RUN apk del --no-network .clone-and-build-make-deps

# Create data directory
RUN apk add --no-cache --virtual .create-directories-deps \
    busybox=1.37.0-r30 \
    musl=1.2.5-r21 \
    ;

# Create directories
RUN mkdir -p /data
RUN apk del --no-network .create-directories-deps


FROM reg.g5d.dev/base@sha256:33f63440d98cb05f5b1b1cb1c870640d4c6b54067f11b30d65861bd120823b03 AS rootfs

# Copy redis files to rootfs
COPY --from=build --chown=65532:65532 /redis.conf /rootfs/home/nonroot/redis.conf

COPY --from=build --chown=65532:65532 /data /rootfs/home/nonroot/database

COPY --from=build --chown=65532:65532 /src/redis/src/redis-server /rootfs/home/nonroot/redis


FROM reg.g5d.dev/base@sha256:33f63440d98cb05f5b1b1cb1c870640d4c6b54067f11b30d65861bd120823b03

# Copy rootfs to root
COPY --from=rootfs /rootfs/ /

EXPOSE 6379

VOLUME ["/home/nonroot/database"]

ENTRYPOINT ["/home/nonroot/redis"]

CMD ["/home/nonroot/redis.conf"]


