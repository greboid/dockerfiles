FROM reg.g5d.dev/alpine@sha256:977a0b2b64bef64b8b459d572f34b491f8ca974ed1314be93aa1f08bb5f9eb66 AS build

ENV LDFLAGS="-static"

# Install packages
RUN set -eux; \
    apk add --no-cache \
        binutils=2.45.1-r0 \
        brotli-libs=1.2.0-r0 \
