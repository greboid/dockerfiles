FROM reg.g5d.dev/golang@sha256:fc79335db9d4c1e02ed1002d1f8209cb7c31f08163752ad8087300afb12fac2c AS build

RUN apk add --no-cache --virtual .build-go-static-deps \
    binutils=2.45.1-r0 \
    brotli-libs=1.2.0-r0 \
    c-ares=1.34.6-r0 \
    ca-certificates-bundle=20251003-r0 \
    gcc=15.2.0-r2 \
    git=2.52.0-r0 \
    gmp=6.3.0-r4 \
    go=1.25.5-r0 \
    isl25=0.25-r2 \
    jansson=2.14.1-r0 \
    libatomic=15.2.0-r2 \
    libcrypto3=3.5.4-r0 \
    libcurl=8.17.0-r1 \
    libexpat=2.7.3-r0 \
    libgcc=15.2.0-r2 \
    libgomp=15.2.0-r2 \
    libidn2=2.3.8-r0 \
    libpsl=0.21.5-r3 \
    libssl3=3.5.4-r0 \
    libstdc++=15.2.0-r2 \
    libunistring=1.4.1-r0 \
    mpc1=1.3.1-r1 \
    mpfr4=4.2.2-r0 \
    musl=1.2.5-r21 \
    musl-dev=1.2.5-r21 \
    nghttp2-libs=1.68.0-r0 \
    nghttp3=1.13.1-r0 \
    pcre2=10.47-r0 \
    zlib=1.3.1-r2 \
    zstd-libs=1.5.7-r2 \
    ;

# Clone repository
RUN git clone --depth=1 --branch v3.1.0 "https://github.com/csmith/linx-server" /src
# Download dependencies
WORKDIR /src
RUN go mod download
# Build binary
RUN CGO_ENABLED=0 go build -trimpath -tags 'netgo,osusergo' -ldflags='-s -w -extldflags "-static"' -o /main .
# Generate license notices
RUN go run github.com/google/go-licenses@latest save . --save_path=/notices/main
RUN apk del --no-network .build-go-static-deps

RUN apk add --no-cache --virtual .create-directories-deps \
    busybox=1.37.0-r30 \
    musl=1.2.5-r21 \
    ;

# Create directories
RUN mkdir -p /data/files /data/meta; \
    chmod 777 /data/files; \
    chown 65532:65532 /data/files; \
    chmod 777 /data/meta; \
    chown 65532:65532 /data/meta
RUN apk del --no-network .create-directories-deps


FROM reg.g5d.dev/base@sha256:ac7930501839926284d94be99def6ff8f0691f0f38f35f21d667f16709f66347 AS rootfs

COPY --from=build /main /rootfs/linx-server

COPY --from=build /notices /rootfs/notices

COPY --from=build /data/files /rootfs/data/files

COPY --from=build /data/meta /rootfs/data/meta


FROM reg.g5d.dev/base@sha256:ac7930501839926284d94be99def6ff8f0691f0f38f35f21d667f16709f66347

COPY --from=rootfs /rootfs/ /

EXPOSE 8080

ENTRYPOINT ["/linx-server", "-bind=0.0.0.0:8080", "-filespath=/data/files/", "-metapath=/data/meta/"]

CMD ["-sitename=linx", "-allowhotlink"]


