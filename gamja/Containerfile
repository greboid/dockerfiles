FROM reg.g5d.dev/alpine@sha256:14dc126b317bdce30c2539357b1242160df85d6c188f4e1144d25caa462624d7 AS busybox

# Install packages
RUN set -eux; \
    apk add --no-cache \
        busybox-static=1.37.0-r30 \
    ;


FROM reg.g5d.dev/node@sha256:eb68dc9ba8b73704293a7e5fcf61aa4322232056222324231578008f1e902ae6 AS builder

WORKDIR /app

# Clone and build gamja
RUN apk add --no-cache --virtual .build-deps \
  brotli-libs=1.2.0-r0 \
  c-ares=1.34.6-r0 \
  ca-certificates-bundle=20251003-r0 \
  git=2.52.0-r0 \
  libcrypto3=3.5.4-r0 \
  libcurl=8.17.0-r1 \
  libexpat=2.7.3-r0 \
  libgcc=15.2.0-r2 \
  libidn2=2.3.8-r0 \
  libpsl=0.21.5-r3 \
  libssl3=3.5.4-r0 \
  libstdc++=15.2.0-r2 \
  libunistring=1.4.1-r0 \
  musl=1.2.5-r21 \
  nghttp2-libs=1.68.0-r0 \
  nghttp3=1.13.1-r0 \
  pcre2=10.47-r0 \
  zlib=1.3.1-r2 \
  zstd-libs=1.5.7-r2 \
  ; \
  set -eux; \
  git clone https://codeberg.org/emersion/gamja.git; \
  cd gamja; \
  npm install --include=dev; \
  npm run build; \
  apk del --no-network .build-deps


FROM reg.g5d.dev/base@sha256:d1f6a9f3beede32e9679b62dd4a9b8cdc3fbadbd24e2da0807af6a0c23aeddaf AS rootfs

# Copy gamja dist to rootfs
COPY --from=builder --chown=65532:65532 /app/gamja/dist /rootfs/public

# Copy busybox to rootfs
COPY --from=busybox /bin/busybox.static /rootfs/bin/sh

# Copy wrapper script to rootfs
# Copy gamja to /rootfs/usr/local/bin/gamja
COPY --chmod=755 gamja /rootfs/usr/local/bin/gamja


FROM reg.g5d.dev/sws@sha256:657d3b55944c2ecfc6d8bf86bfe1d37afc8a49f774f2d047a120c155a85a29da

# Copy rootfs to root
COPY --from=rootfs --chown=65532:65532 /rootfs/ /

ENTRYPOINT ["gamja"]


