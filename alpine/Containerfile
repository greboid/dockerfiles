# Download, verify and extract
RUN curl -fsSL -o fs.tar.gz "${ARCHIVE_URL}" && \
    echo "${ARCHIVE_SUM}  fs.tar.gz" | sha256sum -c && \
    mkdir -p "/rootfs" && tar -xf "fs.tar.gz" -C "/rootfs" --strip-components=0
RUN apk del --no-network .download-verify-extract-deps

# Add git config
# Copy gitconfig to /rootfs/etc/gitconfig
COPY gitconfig /rootfs/etc/gitconfig


FROM scratch

ENV LANG="en_US.UTF-8"

# Copy filesystem
COPY --from=verify /rootfs/ /

CMD ["/bin/sh"]


