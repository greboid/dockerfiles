FROM alpine AS verify

ARG ARCHIVE_SUM="412454ed98025ad9cd910d13f3d448b184e81502baa83180e89f98d0f13674be"
ARG ARCHIVE_URL="https://dl-cdn.alpinelinux.org/alpine/latest-stable/releases/x86_64/alpine-minirootfs-3.22.2-x86_64.tar.gz"

# Download and verify Alpine minirootfs
RUN apk add --no-cache --virtual .download-verify-extract-deps \
    brotli-libs=1.1.0-r2 \
    busybox=1.37.0-r20 \
    c-ares=1.34.5-r0 \
    ca-certificates-bundle=20250911-r0 \
    curl=8.14.1-r2 \
    libcrypto3=3.5.4-r0 \
    libcurl=8.14.1-r2 \
    libidn2=2.3.7-r0 \
    libpsl=0.21.5-r3 \
    libssl3=3.5.4-r0 \
