WORKDIR /src/{{$.repo}}
RUN go build -tags netgo,osusergo -a -trimpath -ldflags='-w -extldflags "-static" -buildid= {{with $.buildvars}}{{range $.buildvars}} -X {{.}} {{end}}{{end}}' {{with $.tags}}-tags {{range $.tags}}{{.}}{{end}}{{ end}} -o /rootfs/{{$.binary}} ./{{or $.cmd ""}}
RUN go-licenses save ./... --save_path=/notices --force {{with $.skipnotices}}--ignore{{range $.skipnotices}} {{.}}{{end}};{{end}}
RUN cp -r /notices /rootfs/
